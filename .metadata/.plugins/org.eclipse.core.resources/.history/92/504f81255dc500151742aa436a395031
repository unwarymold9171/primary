package core;

import java.awt.*;
import javax.swing.*;

public class guiBuild extends JFrame{
	/**
	 * 
	 */
	private static final long serialVersionUID = -6695122079269918161L;

	public guiBuild(String name, Color colour, LayoutManager manager, int width, int height){
		final JFrame gui = new JFrame(name);
		gui.setBackground(colour);
		gui.setLayout(manager);
		gui.setSize(width, height);
		
		gui.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
	}
}
